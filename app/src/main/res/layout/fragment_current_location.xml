                     android:id="@+id/alert_event"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Small Craft Advisory"
                     android:fontFamily="@font/google_sans_bold"
                     android:textSize="30sp"/>
